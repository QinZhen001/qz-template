{
  "name": "vue3-template",
  "type": "module",
  "version": "1.0.0",
  "private": false,
  "description": "vue3 template",
  "author": "qz",
  "keywords": [
    "vue",
    "vue3",
    "template"
  ],
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check build-only",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "commit": "commit"
  },
  "dependencies": {
    "@vueuse/core": "^11.2.0",
    "naive-ui": "^2.40.1",
    "pinia": "^2.2.6",
    "vue": "^3.5.13",
    "vue-i18n": "^10.0.4",
    "vue-router": "^4.4.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.9.2",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@iconify/vue": "^4.1.2",
    "@types/node": "^22.9.0",
    "@vitejs/plugin-vue": "^5.2.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.15.0",
    "lint-staged": "^15.2.10",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.49",
    "simple-git-hooks": "^2.11.1",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.6.3",
    "vite": "^5.4.11",
    "vite-plugin-vue-devtools": "^7.6.4",
    "vitest": "^2.1.5",
    "vue-tsc": "^2.1.10"
  },
  "simple-git-hooks": {
    "commit-msg": "npx commitlint -e",
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --cache --fix"
    ]
  }
}
